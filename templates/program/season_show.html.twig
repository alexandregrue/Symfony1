{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

<div class="media">
    <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
    <div class="media-body">
        <h1 class="mt-0">Saison {{ season.number }} de {{ program.title }}</h1>
        <p>La saison {{ season.number }} a été diffusé en {{ season.year }} et comporte {{season.episodes|length}} épisodes</p>
    </div>
    <ul>
        <h2>Liste des épisodes :</h2>
        {% for episode in season.episodes %}
        <li>
            <a href="{{ path('program_episode_show', {program: program.id, season: season.id, episode: episode.id}) }}">
            Episode {{ episode.number }} : {{episode.title}}</a>
        </li>

        {% endfor %}
    </ul>
</div>
<a href="{{ path('program_index') }}">
    Retour à la liste des programmes
</a>
{% endblock %}